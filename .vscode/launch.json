  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Scylla",
      "type": "python",
      "request": "launch",
      "program": "scylla/__main__.py",
      "console": "integratedTerminal",
      "env": {"PYTHONPATH": "${workspaceRoot}"}
    },

    {
      "name": "Python: Scylla: Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
          "--no-cov"
      ],
      "console": "integratedTerminal",
      "env": {"PYTHONPATH": "${workspaceRoot}"}
    }
  ]
}